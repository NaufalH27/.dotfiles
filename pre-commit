# this is for hook before pushing to github

git add pre-commit

# derefrence soft link and add it to staging
for f in ./symlink/*
do
    if [ -L "$f" ] 
    then
	config_file=$(readlink -f "$f")
	fname=$(basename config_file)	
	git_path="./config/$fname"
	cp "$config_file" "$git_path"
	git add "$config_file"
    fi
done
