{
    "custom/arch": {
        "format": "󰣇",
        "tooltip": true,
        "tooltip-format": "btw"
    },

    "hyprland/workspaces": {
        "format": "{icon}",
        "on-click": "activate",
        "format-icons": {
          "1": "",
          "2": "",
          "3": "",
          "4": "",
          "5": ""
        },
        "sort-by-number": true,
        "all-outputs": true,
        "active-only": false,
        "persistent-workspaces": {
          "*": 5
        }
      },


    "hyprland/window": {  
        "format": "{initialTitle}",
        "icon" : true,
        "separate-outputs": true,
        "rewrite" : {
            "(^$)" : "󰣇 hyprland",
            "rewrite": {
                "(^$)": "󰣇 hyprland"
            }
        }
    },

    "pulseaudio": {
        "format": "{icon}  {volume}",
        "format-bluetooth": "{icon} ",
        "format-bluetooth-muted": " {icon} ",
        "format-muted": "",
        "format-source": "",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
    },
    "network": {
        "format-wifi": "{icon}  {bandwidthTotalBits} ",
        "format-ethernet": "", 
        "tooltip-format": "{essid}",
        "format-linked": "",
        "format-disconnected": "󰞃",
        "format-icons": ["󰢼", "󰢽", "󰢾"]
	 
    },
    "backlight": {
        "format": "{icon}  {percent}",
        "format-icons": ["󰃚", "󰃛", "󰃜", "󰃝", "󰃞", "󰃟", "󰃠"]
    },

    "group/hardware": {
        "orientation": "horizontal",
        "modules": [
            "backlight",
            "pulseaudio",
            "network",
            "battery"
        ]
    },


    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}  {capacity}",
        "format-full": "{icon}  {capacity}",
        "format-charging": "  {capacity}",
        "format-plugged": "{icon}  {capacity}",
        "format-icons": ["", "", "", "", ""]
    },

    "clock": {
        "tooltip":false,
        "format": "󰥔 {:%H:%M}"
    },

    "custom/powermenu": {
        "format": "",
        "tooltip": false
      }
}